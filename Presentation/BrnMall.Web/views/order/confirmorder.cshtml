        <input type="hidden" id="selectedCartItemKeyList" value="@Model.SelectedCartItemKeyList" />
        @if (Model.DefaultFullShipAddressInfo != null)
        {
        <input type="hidden" value="@Model.DefaultFullShipAddressInfo.SAId" name="saId" id="saId" />
